{
	"name": "notes",
	"version": "0.0.2",
	"description": "Notes on coding",
	"private": true,
	"scripts": {
		"start": "npm run build:prod && http-server ./dist",
		"start:dev": "webpack-dev-server --open",
		"build:prod": "webpack",
		"start:node": "node ./src/index.js",
		"watch:node": "nodemon src/index.js",
		"tsc:watch": "tsc --watch",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"keywords": [
		"js",
		"es6"
	],
	"author": "Georgi Gavrilenko <georgi.gavrilenko.gmail.com>",
	"license": "MIT",
	"nodemonConfig": {
		"ignore": [
			"test/*",
			"docs/*"
		],
		"delay": "500"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^3.0.0",
		"@typescript-eslint/parser": "^3.0.0",
		"eslint": "^7.1.0"
	},
	"devDependencies": {
		"@types/jest": "^25.2.3",
		"clean-webpack-plugin": "^3.0.0",
		"html-webpack-plugin": "^4.3.0",
		"jest": "^26.0.1",
		"ts-jest": "^26.0.0",
		"ts-loader": "^7.0.5",
		"typescript": "^3.9.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.11.0"
	}
